{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": ["next/core-web-vitals"],
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "modules": true
    }
  },
  "rules": {
    "no-unused-vars": 2,
    "quotes": [2, "double", { "allowTemplateLiterals": false }],
    "react/jsx-key": [0, { "checkFragmentShorthand": true }],
    "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }]
  }
}
